<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/head'); -%>
    </head>
	<body>
		<!-- HEADER -->
		<%- include('partials/header'); -%>
		<!--/HEADER -->

		<!-- MAIN -->
		<main class="main">
			<div class ="container">
				<div class="d-flex flex-wrap align-items-center justify-content-center justify-content-sm-between py-5">
					<h2 class="page-title mx-2 mb-0">List of the Categories</h2>
					<a href="/form-create-category" class="btn btn-outline-warning btn-lg mt-3 mt-sm-0 ms-2" data-bs-toggle="modal" data-bs-target="#modalFormNewCategory">Create Category</a>
				</div>
				<div class="row d-flex justify-content-center">
					<div id="alertWrapper" class="col-md-6"></div>
				</div>
				<div id="categoryWrapper" class="d-flex row justify-content-start">
					<%if (categories) {
						categories.forEach(category => { %>
							<x-category-card id="<%=category._id%>" name="<%=category.name%>" description="<%=category.description%>">
							</x-category-card>
						<%});
					}%>
				</div>
			</div>	
		</main>
		<!--/MAIN -->

		<!--New Category Template-->
		<%- include('partials/templates/category-template'); -%>
		<!--/New Category Template-->

		<!--New Record Template-->
		<%- include('partials/templates/record-template'); -%>
		<!--/New Record Template-->

		<!-- FOOTER -->
		<%- include('partials/footer'); -%>
		<!--/FOOTER -->
	</body>
</html>