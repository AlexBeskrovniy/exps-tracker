<div class="modal fade" id="modalFormNewRecord" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content bg-dark">
			<div class="modal-body">
				<div class="form-card card bg-dark mt-3">
					<h5 class="card-header text-white text-center">Create a new Record</h5>
					<div class="card-body">
						<form data-record onsubmit="createRecord();">
							<div class="form-floating mb-3">
								<input name="money" type="number" class="form-control" id="floatingInputNum" placeholder="How much" required>
								<label for="floatingInputNum">How much money was spent?</label>
							</div>
							<div class="form-floating mb-3">
								<select name="category" class="form-select" id="floatingSelect" required>
									<option value="One">One</option>
									<option value="Two">Two</option>
									<option value="Three">Three</option>
								</select>
								<label for="floatingSelect">Choose a Category</label>
							</div>
							<div class="form-floating mb-3">
								<textarea name="description" class="form-control" id="floatingTextarea" placeholder="Description" required></textarea>
								<label for="floatingTextarea">Description</label> 
							</div>
							<div class="d-flex justify-content-around">
								<button type="submit" class="btn btn-outline-warning btn-lg">
									Submit
								</button>
								<button type="reset" class="btn btn-outline-warning btn-lg">
									Clear
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-outline-warning" data-bs-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>