<div class="modal fade" id="modalFormNewRecord" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content bg-dark">
			<div class="modal-body">
				<div class="form-card card bg-dark mt-3">
					<h5 class="card-header text-white text-center">Create a new Record</h5>
					<div class="card-body">
						<form action="#" method="POST">
							<div class="form-floating mb-3">
								<input type="date" name="date" class="form-control" id="floatingInput" placeholder="Set a Date" required>
								<label for="floatingInput">Set a Date</label>
							</div>
							<div class="form-floating mb-3">
								<select name="category" class="form-select" id="floatingSelectGrid" required>
									<option value="#">One</option>
									<option value="#">Two</option>
									<option value="#">Three</option>
								</select>
								<label for="floatingSelect">Choose a Category</label>
							</div>
							<div class="form-floating mb-3">
								<input type="number" name="money" class="form-control" id="floatingInput" placeholder="How much" required>
								<label for="floatingInput">How much money was spent?</label>
							</div>
							<div class="form-floating mb-3">
								<textarea name="comment" class="form-control" id="floatingPassword" placeholder="Any Comments" required></textarea>
								<label for="floatingPassword">Any Comments?</label> 
							</div>
							<div class="d-flex justify-content-around">
								<button type="submit" class="btn btn-outline-warning btn-lg">
									Submit
								</button>
								<button type="reset" class="btn btn-outline-warning btn-lg">
									Clear
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-outline-warning" data-bs-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>