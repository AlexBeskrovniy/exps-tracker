<template id="category-temp">
<!-- Google fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;600&display=swap" rel="stylesheet">

<!-- Bootstrap CSS-->
<link type="text/css" rel="stylesheet" href="css/bootstrap.min.css"/>
    <div data-category-div class="card bg-dark">
        <div class="card-header text-white">
            <h3 data-category-name class="card-title text-white">
                <slot name="name"></slot>
            </h3>
        </div>
        <div class="card-body">
            <h5 class="card-title text-white">Description</h5>
            <p data-category-description class="card-text text-white">
                <slot name="description"></slot>
            </p>
        </div>
        <div class="card-footer d-flex justify-content-end py-3">
            <a data-edit-button href="#" class="btn btn-outline-warning me-2" data-bs-toggle="modal" data-bs-target="#modalFormEditCategory">Edit</a>
        </div>
    </div>
</template>

<template id="category-slots">
    <span slot="id"></span>
    <span slot="name"></span>
	<span slot="description"></span>
</template>